<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="開始"
        android:id="@+id/startbtn"
        android:elegantTextHeight="false"
        android:layout_above="@+id/setbtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="設定"
        android:id="@+id/setbtn"
        android:layout_above="@+id/achievementbtn"
        android:layout_alignStart="@+id/startbtn"
        android:layout_alignEnd="@+id/startbtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成就"
        android:id="@+id/achievementbtn"
        android:layout_above="@+id/aboutbtn"
        android:layout_alignStart="@+id/setbtn"
        android:layout_alignEnd="@+id/setbtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="關於"
        android:id="@+id/aboutbtn"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toEndOf="@+id/achievementbtn"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView3"
        android:src="@drawable/hitmousebackground"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>